<!DOCTYPE html>
<html>
  <head>
    <meta charset='UTF-8' />
    <title>Matcha | <%= @title %></title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.css" />
    <link rel="stylesheet" href="/stylesheets/bootstrap-responsive.css" />
    <link rel="stylesheet" href="/stylesheets/application.css" />
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src='http://maps.google.com/maps/api/js?libraries=places&key=AIzaSyA9ub4uYxyWHrVVZz12tVn9vcjGbzxCXyU'></script>
    <script type="text/javascript" src="/javascript/locationpicker.jquery.js"></script>
  </head>
  <body>
    <%= erb(:'layouts/header') %>
    <% if flash[:notice] || flash[:success] %>
      <% flash.keys.each do |type| %>
        <div data-alert class="flash <%= type %> alert-box radius">
          <%= flash[type] %></br>
        </div>
      <% end %>
    <% end %>
    <% if flash[:error] %>
      <div class="errors-cntnr">
         <% flash[:error].each do |e| %>
           <p class="error message">- <%= e %></p>
          <% end %>
      </div>
    <% end %>
    <div class="yield">
      <%= yield %>
    </div>
    <%= erb(:'layouts/footer') %>
  </body>
  <script type="text/javascript" src="/javascript/bootstrap.min.js"></script>
</html>
